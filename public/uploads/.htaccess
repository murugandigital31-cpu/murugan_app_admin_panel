# Allow direct access to files in uploads directory
<IfModule mod_rewrite.c>
    RewriteEngine Off
</IfModule>

# Set proper MIME types for images
<IfModule mod_mime.c>
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
    AddType image/webp .webp
</IfModule>

# Enable file serving
Options +Indexes